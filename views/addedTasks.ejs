
<div class="list-group" id="taskList">
  <% if (tsk.length> 0) { %>
    <div class="list-group">
      <% for (let task of tsk) { %>
        <div class="list-group-item">
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox" <% if (task.completed) { %> checked <% } %>
                onclick="event.preventDefault(); document.getElementById('complete-form-<%= task.id %>').submit();">
            </label>
            <form id="complete-form-<%= task.id %>" action="/complete/<%= task.id %>" method="POST"
              style="display: none;">
              <input type="hidden" name="_method" value="POST">
            </form>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <p class="lead fw-normal mb-0">
              <%= task.title %>
            </p>
            <div class="d-flex flex-row">
              <a href="/edit-task/<%= task.id %>?edit=true" class="text-info" data-mdb-toggle="tooltip"
                title="Edit todo">
                <i class="fas fa-pencil-alt me-1"></i>
              </a>
              <form action="/delete-task" method="POST">
                <input type="hidden" value="<%= task.id %>" name="taskId">
                <button class="text-danger" data-mdb-toggle="tooltip" title="Delete todo" type="submit"
                  style="border: none; background: none;">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>
            </div>
          </div>
          <div class="text-muted mt-1">
            <p class="small mb-0"><i class="fas fa-info-circle me-2"></i>
              <%= task.date %>
            </p>
          </div>
        </div>
        <% } %>
    </div>
    <% } else { %>
      <h1>No Tasks Found!</h1>
      <% } %>
</div>


